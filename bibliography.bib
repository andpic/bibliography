@inproceedings{LiC2015,
  title     = {Locality-Driven Dynamic {GPU} Cache Bypassing},
  author    = {Li, Chao and Song, Shuaiwen Leon and Dai, Hongwen and Sidelnik, Albert and Hari, Siva Kumar Sastry and Zhou, Huiyang},
