@article{Ozaslan2019,
  author      = {Ozaslan, Ibrahim Kurban and Pilanci, Mert and Arikan, Orhan},
  title       = {Regularized Momentum Iterative Hessian Sketch for Large Scale Linear System of Equations},
  date        = {2019-12-07},
