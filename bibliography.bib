@article{Demidov2013,
  author       = {Demidov, Denis and Ahnert, Karsten and Rupp, Karl and Gottschling, Peter},
  title        = {Programming {CUDA} and {OpenCL}: A Case Study Using Modern {C++} Libraries},
  journaltitle = {{SIAM} {J}ournal on {S}cientific {C}omputing},
