  date      = {2009},
  doi       = {10.1145/1504176.1504181},
  isbn      = {978-1-60558-397-6},
  keywords  = {optimistic parallelism, parallelism profiles, profiling},
  location  = {Raleigh, NC, USA},
  numpages  = {12}
}

